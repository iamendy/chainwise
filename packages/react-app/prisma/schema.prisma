generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Influencer {
  id String @id @default(cuid())
  userAddress String @unique
  username String @unique
  createdAt DateTime @default(now())
  campaigns Campaign[]
  @@map("influencers")
}

model Campaign {
  id String @id @default(cuid())
  name String
  websiteUrl String
  twitterUrl String
  amount String? @default("0")
  status Int @default(-1) /// -1 draft, 0 - pending, 1 - completed, 2 - ongoing
  userAdd String
  influencerId String? 
  description String 
  startDate DateTime? @default(now())
  endDate DateTime? @default(now())
  createdAt DateTime @default(now())

  milestones Milestones[]
  assignedTo Influencer? @relation(fields: [influencerId], references: [id])
  //creator User @relation(fields: [userAdd], references: [address])
  @@map("campaigns")
}

model InfluencerCampaign{
  id String @id @default(cuid())
  campaignId String
  influencerAddress String
  status Boolean @default(false) /// true - accepted or false - pending
  createdAt DateTime @default(now())
  @@map("influencer-campaign")
}

model Milestones{
  id String @id @default(cuid())
  title String
  description String?
  
  status Int @default(0) /// 0 - pending, 1 - marked, 2 - approved

  campaignId String
  
  createdAt DateTime @default(now())
  campaign Campaign @relation(fields: [campaignId], references: [id])
  @@map("milestones")
}